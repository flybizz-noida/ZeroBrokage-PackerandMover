<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.OtpActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginTop="-90dp"
        android:layout_marginRight="-90dp"
        android:background="@drawable/main_circule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="150dp"
        android:fontFamily="@font/aller_bd"
        android:text="Enter OTP"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A 4 digit code has bee sent to "
        app:layout_constraintStart_toStartOf="@+id/appCompatTextView"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

    <TextView
        android:id="@+id/tvTextMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9838166666"
        android:textColor="@color/appcolor"
        android:textSize="15.60dp"
        app:layout_constraintStart_toStartOf="@+id/appCompatTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:focusableInTouchMode="true"
        android:textColor="@color/green"
        app:bar_enabled="true"
        app:otp_box_background="@drawable/shape_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTextMobileNumber"
        app:length="4"
        app:otp_text_size="24dp" />


    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Resend Otp:"
        android:textColor="@color/sea_blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp_view" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="00:00"
        android:textColor="@color/red_orange"
        app:layout_constraintBottom_toBottomOf="@id/tvResend"
        app:layout_constraintEnd_toEndOf="@id/otp_view"
        app:layout_constraintStart_toEndOf="@id/tvResend"
        app:layout_constraintTop_toTopOf="@id/tvResend" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btVerify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_edit_text"
        android:text="Verify"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/otp_view"
        app:layout_constraintStart_toStartOf="@id/otp_view"
        app:layout_constraintTop_toBottomOf="@id/otp_view" />

</androidx.constraintlayout.widget.ConstraintLayout>